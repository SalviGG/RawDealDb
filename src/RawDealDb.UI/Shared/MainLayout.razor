@inherits LayoutComponentBase

<PageTitle>RawDealDb.UI</PageTitle>

<MudThemeProvider @bind-IsDarkMode="@_isDarkMode" Theme="_theme"/>
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="0" Fixed>
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudText Typo="Typo.h5" Class="m-lg-3 fontLogo">Raw Deal DB</MudText>
        <MudSpacer />
        <MudIconButton Icon="@_iconToggle" Color="Color.Inherit" OnClick="@((e) => DarkModeToggle())"/>
    </MudAppBar>
    <MudDrawer @bind-Open="_collapseNavBar" Elevation="1">
        <MudDrawerHeader>
            <MudText Typo="Typo.h6">Menu</MudText>
        </MudDrawerHeader>
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        <MudContainer>
            <MudAlert Severity="Severity.Info">Raw Deal DB is now out on Beta v0.2.5! Check what's new in the <MudLink Href="changelog" Typo="Typo.inherit">Changelog</MudLink></MudAlert>
        </MudContainer>
        <MudContainer MaxWidth="MaxWidth.Large" Class="my-4 pt-4 mb-4 pb-4">
            @Body
        </MudContainer>
        <MudDivider DividerType="DividerType.Middle"/>
        <MudContainer MaxWidth="MaxWidth.Large" Style="position:relative; bottom:0;">
            <MudText Typo="Typo.caption">
                <MudIcon Size="Size.Small" Icon="@Icons.Filled.Copyright" />
                <MudSpacer/>
                All rights belong to their respective owners. All images were provided under fair use guidelines.
                <MudSpacer/>
                Raw Deal | By Comic Images.
                <MudSpacer/>
                Raw Deal Virtual Classic | Developed and distributed for free by <MudLink Typo="Typo.inherit" href="https://teamcanadaonline.net">Team Canada Online (TCO)</MudLink>.
                <MudSpacer/>
                Raw Deal DB V0.2.5-beta  | Developed by SGG.
            </MudText>
        </MudContainer>
    </MudMainContent>
    <MudScrollToTop>
        <MudFab Color="Color.Inherit" Icon="@Icons.Filled.ArrowCircleUp" />
    </MudScrollToTop>
</MudLayout>

@code {
    private bool _isDarkMode = true;
    private MudTheme _theme = new();
    private string _iconToggle => _isDarkMode ? Icons.Outlined.DarkMode : Icons.Outlined.LightMode;
    private bool _collapseNavBar = false;

    private void DarkModeToggle()
    {
        _isDarkMode = !_isDarkMode;
    }
    private void DrawerToggle()
    {
        _collapseNavBar = !_collapseNavBar;
    }
}